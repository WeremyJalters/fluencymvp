<h1>Books for Current Student </h1>

<p>
  Download:
  <%= link_to "CSV", student_books_path(format: "csv") %> |
  

</p>

<table class="table">
  <thead>
    <tr>
      <th>Book name</th>
      <th>Book level</th>
      <th>Total words</th>
      <th>Words wrong</th>
      <th>Self corrections</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= book.book_level %></td>
        <td><%= book.total_words %></td>
        <td><%= book.words_wrong %></td>
        <td><%= book.self_corrections %></td>
        <td><%= link_to 'Show Book', book %></td>
        <td><%= link_to 'Modify Book', edit_book_path(book) %></td>
        <td><%= link_to 'Remove Book', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


